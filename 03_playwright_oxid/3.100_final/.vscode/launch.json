    "version": "0.2.0",
    "configurations": [
        {
            "type": "robotframework-lsp",
            "name": "Robot Framework: Launch .robot file",
            "request": "launch",
            "cwd": "${workspaceFolder}",
            "target": "${file}",
            "terminal": "integrated",
            "env": {
                "PRESENTER_MODE": "{'duration': '2 seconds', 'width': '4px', 'style': 'dotted', 'color': 'red'}"
            },
            "args": []
        }
    ]
}